<h2>
  Reset your password
</h2>

<p>
  To be emailed a link to reset your password, please enter your email address.
</p>

<%= form_for :password, url: passwords_path, html: { class: "form-stacked" } do |form| %>
  <%= form.label :email, "Email address:" %>
  <%= form.text_field :email, type: "email", class: "1/1" %>

  <div>
    <%= form.submit "Reset password" %>
  </div>
<% end %>
