<h2>
  Change your password
</h2>

<p>
  Your password has been reset. Choose a new password below.
</p>

<%= form_for :password_reset, url: user_password_path(@user, token: @user.confirmation_token), html: { method: :put, class: "form-stacked" } do |form| %>
  <%= form.label :password, "Choose password:" %>
  <%= form.password_field :password, class: "1/1" %>

  <div>
    <%= form.submit "Save this password" %>
  </div>
<% end %>
