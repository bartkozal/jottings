<% content_for :application do %>
  <div class="container">
    <div class="navbar">
      <div class="grid grid-pair grid-middle">
        <div class="grid-item 1/2">
          <ul class="list-inline navbar-menu">
            <li><%= link_to "Tour", "#" %></li>
            <li><%= link_to "Pricing", "#" %></li>
          </ul>
        </div>

        <div class="grid-item 1/2">
          <%= link_to "Try now for free", sign_up_path, class: "btn btn-positive" %>
          <%= link_to "or sign in.", sign_in_path, class: "text-small text-muted block margin-1/4-top" %>
        </div>
      </div>
    </div>

    <%= content_for?(:content) ? yield(:content) : yield %>
  </div>
<% end %>

<%= render template: "layouts/application" %>
