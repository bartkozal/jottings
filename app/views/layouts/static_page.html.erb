            <ul class="navbar-menu">
              <li><%= link_to image_tag("img-logo.svg"), root_path, class: "navbar-brand" %></li>
              <li>
                <%= link_to root_path do %>
                  Jottings <sup class="text-muted">Beta</sup>
                <% end %>
              </li>
              <li><%= link_to "Pricing", page_path(page: "pricing") %></li>
            </ul>
          </div>

          <div class="grid-item 1/2">
            <ul class="navbar-menu">
              <li><%= link_to "Try now for free", sign_up_path, class: "btn btn-brand" %></li>
              <li><%= link_to "or sign in", sign_in_path %></li>
            </ul>
          </div>
        </div>
      </div>

      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>

    <div class="footer padding-vertical">
      <%= link_to "&copy; #{Date.today.year} BartÅ‚omiej Kozal &amp; Maciej Kozal".html_safe, page_path(page: "contact") %>
