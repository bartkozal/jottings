<ul class="list-reset">
  <% current_user.documents.each do |document| %>
    <li class="editor-sidebar-item">
      <div class="grid grid-pair">
        <div class="grid-item 7/9">
          <%= link_to editor_document_path(document) do %>
            <div class="media media-middle media-1/2">
              <% if document.owner?(current_user) %>
                <%= icon_tag "document-text", "h3" %>
              <% else %>
                <%= icon_tag "person-stalker", "h3" %>
              <% end %>
              <div class="media-body"><%= document.title %></div>
            </div>
          <% end %>
        </div>

        <div class="grid-item 2/9">
          <% if document.owner?(current_user) %>
            <%= link_to editor_document_path(document), method: :delete do %>
              <%= icon_tag "trash-a", "h3" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>


<%= form_for [:editor, Document.new] do |f| %>
  <div class="media media-middle media-1/3 text-white">
    <%= icon_tag "document", "h3" %>
    <div class="media-body">
      <%= f.hidden_field :body, value: "Untitled" %>
      <%= f.submit "New document", class: "btn-reset" %>
    </div>
  </div>
<% end %>
