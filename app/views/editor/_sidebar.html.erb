<ul class="list-reset">
  <% current_user.documents.each do |document| %>
    <li class="editor-sidebar-item">
      <div class="grid grid-pair">
        <div class="grid-item 7/9">
          <%= link_to edit_editor_document_path(document) do %>
            <div class="media media-middle media-1/3">
              <i class="ion-document-text h3"></i>
              <div class="media-body"><%= document.title %></div>
            </div>
          <% end %>
        </div>

        <div class="grid-item 2/9">
          <%= link_to editor_document_path(document), method: :delete do %>
            <i class="ion-trash-a h3"></i>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<ul class="list-reset">
  <li>
    <%= link_to new_editor_document_path do %>
      <div class="media media-middle media-1/3">
        <i class="ion-document h3"></i>
        <div class="media-body">New document</div>
      </div>
    <% end %>
  </li>
</ul>
