<div class="grid">
  <div class="grid-item 3/4">
    <div class="margin-bottom">
      <%= link_to editor_document_path(@document) do %>
        <%= icon_tag "chevron-left", "padding-1/4-right" %>
        <%= @document %>
      <% end %>
    </div>

    <ul class="list-reset">
      <% @document.collaborators.each do |collaborator| %>
        <li class="margin-bottom">
          <div class="grid grid-middle grid-pair">
            <div class="grid-item 1/2">
              <div class="media media-middle media-1/2">
                <%= gravatar_tag collaborator.email, size: 40 %>
                <div class="media-body">
                  <%= collaborator.email %>
                </div>
              </div>
            </div>

            <div class="grid-item 1/2">
              <% unless @document.owner?(collaborator) %>
                <ul class="list-divided">
                  <li>
                    <%= link_to "Make owner",
                      editor_document_ownership_path(@document, user_email: collaborator.email),
                      method: :put %>
                  </li>
                  <li>
                    <%= link_to "Remove",
                      editor_document_share_path(@document, user_email: collaborator.email),
                      method: :delete,
                      class: "text-negative" %>
                  </li>
                </ul>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
      <li class="padding-2/1-left">
        <%= form_for @collaboration, url: editor_document_share_path(@document) do |form| %>
          <%= form.text_field :user_email, class: "1/2" %>
          <%= form.submit "Invite" %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
