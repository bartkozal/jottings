<div class="grid grid-pair">
  <div class="grid-item 4/5 editor-text-editor">
    <text-editor placeholder="Click and start writing Markdown here..."
      document="<%= @document.to_param %>"
      shared="<%= @document.has_shared_stack? %>">
  </div>

  <div class="grid-item 1/5 editor-collaborators">
    <fullscreen-toggle class="margin-1/2-bottom">
      <i class="ion-easel"></i>
    </fullscreen-toggle>

    <% if @document.has_shared_stack? %>
      <ul class="list-reset no-margin-bottom">
        <% @document.collaborators.each do |collaborator| %>
          <li class="margin-1/2-bottom" data-cable-user="<%= collaborator.email %>">
            <%= gravatar_tag collaborator.email, size: 40 %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
