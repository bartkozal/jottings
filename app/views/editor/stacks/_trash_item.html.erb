<div class="grid grid-middle grid-pair">
  <div class="grid-item 1/2">
    <div class="media media-middle media-1/3">
      <%= icon_tag "ios-box-outline" %>
      <div class="media-body"><%= stack %></div>
    </div>
  </div>

  <div class="grid-item 1/2">
    <ul class="list-divided">
      <li>
        <%= link_to "Restore", "#" %>
      </li>

      <% if stack.owner?(current_user) %>
        <li>
          <%= link_to "Delete Forever", "#", class: "text-negative" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
