<div class="grid grid-pair">
  <div class="grid-item 5/6">
    <div class="media media-middle media-1/2">
      <%= icon_tag "folder" %>
      <div class="media-body">
        <%= stack %>
        <% if stack.has_collaborators? %>
          <%= icon_tag "person-stalker" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid-item 1/6">
    <%= render "editor/stacks/dropdown", stack: stack %>
  </div>
</div>

<ul class="list-reset padding-left">
  <% stack.documents.sort_by(&:title).each do |document| %>
    <li>
      <%= render "editor/documents/sidebar_item", document: document, type: :document %>
    </li>
  <% end %>
</ul>
