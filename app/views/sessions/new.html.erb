<h2>Sign in</h2>

<%= form_for :session, url: session_path, html: { class: "form-stacked" } do |form| %>
  <%= form.label :email, "E-mail" %>
  <%= form.text_field :email, type: 'email', class: "1/1" %>

  <%= form.label :password %>
  <%= form.password_field :password, class: "1/1" %>

  <%= form.submit "Sign in" %>
<% end %>

<%= link_to "Forgot password?", new_password_path %>
